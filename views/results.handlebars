<div class="full-size titlebackground">
  <div class = "result-header">Results</div>
    <div class = "container">
      {{#each drones}}
        <a href="/single/{{this.id}}" action="/single/{{this.id}}" method="POST">
          <div class="main col-md-4 snake">
              <div class="overlay"><span class="header">{{this.drone_name}}</span>
              <span class="description">${{this.price}}</span></div>
              <img class="snkimg" src="{{this.picture_small}}"/>
          </div>
        </a>
      {{/each}}
    </div>
</div>
